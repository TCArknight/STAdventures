  <!-- Focus slot resource to track the pool of focus slots being spent -->
  <thing
    id="resShipRef"
    name="Ship Refits"
    compset="Resource">
    <fieldval field="resObject" value="Refit"/>

    <!-- Automatically add the resource to every actor -->
    <tag group="Helper" tag="Bootstrap"/>

    <!-- Use the starting ability slots as our initial maximum -->
    <eval index="1" phase="Setup" priority="5500"><![CDATA[
	  var refCount as number
	  var startYear as number
	  var launchYear as number
	  var yearSteps as number
	  var adjSteps as number
	  var systemPoints as number
	  
	  field[resMax].value = 0
	  
	  ~If we're not a starship, we're good
	  doneif (#ischaracter[] <> 0  )
	  
	  ~If we haven't chosen a frame, we're good
	  doneif (hero.tagis[IsFrame.?] = 0)
	  
	  startYear = #shipyearvalue[]
	  launchYear = #shiplaunchvalue[]
	  
	  yearSteps = (startYear - launchYear) / 10
      adjSteps = round(yearSteps,0,-1)
	  
      field[resMax].value += adjSteps
	  
	  ~ increase system points by adjsutment
	  #resmax[resAttrib] += adjSteps
	  
      ]]></eval>
    </thing>
	
