    <fieldval field="usrCandid1" value="component.DiscDept"/>
    <fieldval field="usrSource1" value="1"/>
    <usesource source="2ndEdition"/>
    <tag group="TalentCat" tag="General" name="General" abbrev="General"/>
    <tag group="ChooseSrc1" tag="Container" name="All Picks on Container" abbrev="All Picks on Container"/>
