<document signature="Hero Lab Data">

  <!-- Academy Tracks -->
  <thing
    id="acCommand"
    name="Command"
    compset="Academy"
    isunique="yes"
    description="The Command track is for those cadets who aspire to command their own starship someday. It focuses on leadership and interpersonal skills, diplomacy, decisionmaking in crisis situations, an understanding of protocol and procedure, and starship operations, which includes flight control. Many command track cadets begin their careers as flight control officers and pilots, where their training can be put to the test on a smaller scale while they gain the experience necessary for more authority and responsibility. Command track cadets customarily undertake the infamous Kobayashi Maru test during their final year.\n\nMajor: Command or Conn">
	<fieldval field="usrLabel1" value="Major Study:"/>
    <fieldval field="usrCandid1" value="component.DiscDept &amp; (thingid.discdept01|thingid.discdept02)"/>
    <fieldval field="usrSource1" value="1"/>
    <fieldval field="usrLabel2" value="Minor Study:"/>
    <fieldval field="usrCandid2" value="component.DiscDept"/>
    <fieldval field="usrSource2" value="1"/>
    <fieldval field="usrLabel3" value="Minor Study:"/>
    <fieldval field="usrCandid3" value="component.DiscDept"/>
    <fieldval field="usrSource3" value="1"/>
    <tag group="User" tag="NoAutoName"/>
	<bootstrap thing="vaCustom">
	  <assignval field="UserName" value="Starfleet Academy - Command Track"/>
	  <assignval field="UserDesc" value="The character gains a single Value, which should reflect some aspect of the character’s beliefs that developed during their time at the Academy."/>
      </bootstrap>
    </thing>
