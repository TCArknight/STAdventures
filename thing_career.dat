      </bootstrap>
    <eval phase="PreAbility" priority="5000">#resmax[resTalent] += 1
      <before name="Calc abiFinal"/>
      </eval>
    </thing>
  <thing id="cp2EVeteran" name="Veteran" description="You have decades of experience in your chosen profession, and you’ve likely seen much of the Alpha and Beta Quadrants, if not more of the Galaxy. Your judgement and opinions are highly regarded by those around you, even those who hold higher rank or status.\n\n{b}VALUE:{/b} The character receives a value, which must reflect the character’s years of experience and the beliefs they’ve formed over their long career. Examples include:\n- There’s not much that can surprise me anymore\n- You don’t survive this long without facing loss\n- I’ve trusted my instincts long enough to doubt\nthem now\n\n{b}TALENT:{/b} The character receives a single talent: {b}Veteran{/b}" compset="CareerExp" uniqueness="unique">
    <fieldval field="ceRoll" value="6"/>
    <usesource source="2ndEdition"/>
    <bootstrap thing="tal2EVeteran">
      <autotag group="Helper" tag="NoCost"/>
      </bootstrap>
    <bootstrap thing="vaCustom">
      <assignval field="UserName" value="Experience - Veteran"/>
      <assignval field="UserDesc" value="The character gains a single Value, which should reflect the character’s inexperience and naïveté in some way."/>
      </bootstrap>
    <eval phase="PreAbility" priority="5000">#resmax[resTalent] += 1
      #resspent[resTalent] += 1
      <before name="Calc abiFinal"/>
      </eval>
    </thing>
  </document>
